<Page
    x:Class="NewsAggregator.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NewsAggregator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="15*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#27292E">
            <TextBlock Text="Your Stories" HorizontalAlignment="Center" Foreground="White" VerticalAlignment="Center"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="16*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Background="#E54F4B">
                    <Image x:ConnectionId='2' VerticalAlignment="Stretch" x:Name="backButton"                        HorizontalAlignment="Center"/>
                </Grid>

            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <AutoSuggestBox x:ConnectionId='1' x:Name="suggestionBox" PlaceholderText="Add Like"                                                                                         />
        </Grid>
    </Grid>
</Page>

